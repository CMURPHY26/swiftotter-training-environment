<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/decoration-price" method="POST">
        <service class="SwiftOtter\ProductDecorator\Api\CalculatePriceInterface"
                 method="execute"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/V1/detail-loader/valid" method="GET">
        <service class="SwiftOtter\ProductDecorator\Api\DetailLoaderInterface" method="valid"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
